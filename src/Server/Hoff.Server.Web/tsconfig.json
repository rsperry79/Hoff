{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [ "DOM", "ES2022" ],
    "module": "ES2022",
    "moduleResolution": "Node",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "outDir": "./",
    "removeComments": true,
    "rootDir": "src/ts/",
    "skipLibCheck": true,
    "target": "ES2022"
  },

  "include": [
    "**/*",
    "*"
  ],
  "exclude": ["node_modules"],
  "inlineSources": true,
  "typeRoots": [
    "node_modules/@types/**/*"
  ]
}